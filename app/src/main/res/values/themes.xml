<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UTMobile" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/otter_light</item>
        <item name="colorPrimaryVariant">@color/otter_light</item>
        <item name="colorOnPrimary">@color/otter_sea</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/otter_dark</item>
        <item name="colorSecondaryVariant">@color/otter_dark</item>
        <item name="colorOnSecondary">@color/otter_sea</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">3</item>
    </style>
    <style name="Theme.UTMobile.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/otter_dark</item>
    </style>
    <style name="Theme.UTMobile.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
    </style>
    <style name="Theme.UTMobile.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    </style>
</resources>